@model UI.Models.RegisterModel
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_LayoutIntroduce.cshtml";
}
<link href="~/Content/cssMain.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<body>
    @using (Html.BeginForm("Signin", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row" style="min-height:500px;">
            <div class="col-lg-3 col-sm-2 col-md-1 col-xs-1"></div>
            <div class="col-lg-6 col-sm-8 col-md-10 col-xs-10">
                <h2 style="color:#ffb0bd;text-align:center">ĐĂNG KÝ</h2>
                @Html.TextBoxFor(model => model.UserName, new { @placeholder = "Tên đăng nhập ...", @class = "txt" })
                @Html.TextBoxFor(model => model.Name, new { @placeholder = "Họ tên ...", @class = "txt" })
                @Html.TextBoxFor(model => model.Phone, new { @placeholder = "Số điện thoại ...", @class = "txt" })
                @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email ...", @class = "txt" })
                @Html.TextBoxFor(model => model.Address, new { @placeholder = "Địa chỉ ...", @class = "txt" })
                @Html.PasswordFor(model => model.Password, new { @placeholder = "Mật khẩu ...", @class = "txt" })
                @Html.PasswordFor(model => model.ConfirmPassword, new { @placeholder = "Xác nhận mật khẩu ...", @class = "txt" })
                <input type="text" placeholder="Email ..." style="width:100%;height:40px;border-radius:10px;margin-bottom:10px" /><br />
                <input type="text" placeholder="Địa chỉ ..." style="width:100%;height:40px;border-radius:10px;margin-bottom:10px" /><br />
                <input type="password" placeholder="Mật khẩu ..." style="width:100%;height:40px;border-radius:10px;margin-bottom:10px" /><br />
                <input type="password" placeholder="Xác nhận mật khẩu ..." style="width:100%;height:40px;border-radius:10px;margin-bottom:10px" /><br />
                <button type="submit" class="btn" style="background-color:#ffb0bd;color:white;width:100%;height:50px;border-radius:10px;margin-bottom:10px">ĐĂNG KÝ</button><br />
                <div class="warning">
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })<br />
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })<br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger", @style = "list-style-type:none;" })
                </div>


            </div>
            <div class="col-lg-3 col-sm-2 col-md-1 col-xs-1"></div>
        </div>
    }
</body>
<style>
    .txt {
        width: 100%;
        height: 40px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .btn-login {
        background-color: #ffb0bd;
        color: white;
        width: 100%;
        height: 50px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .btn-classic {
        width: 100%;
        height: 50px;
        border-radius: 10px;
        margin-bottom: 10px;
    }

    .warning {
        text-align: left;
    }

        .warning ul {
            list-style: none;
            margin-left: -40px;
        }
</style>
