<style>
    div.container {
        border: 3px solid black;
        cursor: pointer;
        width: 900px;
        display: flex;
        flex-wrap: wrap;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
    }

    img {
        width: 100%;
        height: auto;
        transition: all ease-in-out;
        opacity: 1;
    }

    .tinTuc {
        position: relative;
        overflow: hidden;
    }

        .tinTuc .txt {
            width: 100%;
            height: 100%;
            background-color: white;
            position: absolute;
            bottom: 50px;
            text-align: center;
            color: black;
            padding: 10px;
            box-sizing: border-box;
            opacity: 0;
            text-align: center;
        }

        .tinTuc:hover .txt {
            opacity: 0.5;
            transform: translateY(50px);
            transition: ease-in-out 0.5s;
        }

        .tinTuc:hover img {
            transform: scale(1.0);
            transition: all ease-in-out 0.5s;
            opacity: 0.5;
        }
    .carousel-indicators li {
        width: 10px;
        height: 10px;
        border-radius: 100%;
    }
</style>

